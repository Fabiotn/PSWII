<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IncluirCliente</servlet-name>
        <servlet-class>IncluirCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarCliente</servlet-name>
        <servlet-class>ConsultarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IncluirPontoColeta</servlet-name>
        <servlet-class>IncluirPontoColeta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarPontoColeta</servlet-name>
        <servlet-class>ConsultarPontoColeta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncluirCliente</servlet-name>
        <url-pattern>/IncluirCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarCliente</servlet-name>
        <url-pattern>/ConsultarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncluirPontoColeta</servlet-name>
        <url-pattern>/IncluirPontoColeta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarPontoColeta</servlet-name>
        <url-pattern>/ConsultarPontoColeta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
